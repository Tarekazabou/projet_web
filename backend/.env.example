# Mealy Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI SERVICES - REQUIRED FOR RECIPE GENERATION
# =============================================================================

# Get your Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_EMBEDDING_MODEL=models/text-embedding-004

# =============================================================================
# RAG CONFIGURATION - Recipe Retrieval Augmented Generation
# =============================================================================

# Path to recipe dataset (relative to project root)
RAG_RECIPES_CSV=13k-recipes.csv

# Path to embedding cache (speeds up startup after first run)
RAG_EMBEDDING_CACHE=backend/data/recipe_embeddings.npz

# Maximum recipes to embed (lower = faster startup, higher = better quality)
# Recommended: 5000 for good quality, 1000 for faster startup
RAG_MAX_EMBEDDED_RECIPES=5000

# Number of similar recipes to retrieve for context
RAG_TOP_K=5

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================

FIREBASE_PROJECT_ID=mealy-41bf0
FIREBASE_CREDENTIAL_PATH=mealy-41bf0-firebase-adminsdk-fbsvc-7d493e86ea.json

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

FLASK_ENV=development
HOST=0.0.0.0
PORT=5000
SECRET_KEY=dev-secret-key-change-in-production

# =============================================================================
# CORS - Cross-Origin Resource Sharing
# =============================================================================

CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:5000

# =============================================================================
# LOGGING
# =============================================================================

LOG_LEVEL=INFO

# =============================================================================
# RATE LIMITING
# =============================================================================

RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100 per hour

# =============================================================================
# AUTHENTICATION
# =============================================================================

JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# =============================================================================
# DEMO MODE
# =============================================================================

DEMO_MODE_ENABLED=true
DEMO_USER_ID=demo_user_01
